{
	"name": "error_handler",
	"version": "1.0.0",
	"description": "Error handler function",
	"main": "functions/index.js",
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules",
			"functions"
		],
		"watch": [
			"src"
		],
		"exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
		"ext": "ts, js"
	},
	"scripts": {
		"clean": "rimraf \"functions/*\"",
		"tsc": "tsc",
		"dev": "npx functions-framework --target=errorHandler",
		"start": "nodemon src/index.ts",
		"cp-package": "copyfiles package.json functions",
		"build": "run-s clean && tsc && tscpaths -p tsconfig.json -s ./src -o ./functions && npm run cp-package",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"bin": {
		"create-project": "./cli.js"
	},
	"author": "Glenn Chon",
	"license": "UNLICENSED",
	"devDependencies": {
		"@google-cloud/functions-framework": "^3.1.0",
		"@types/express": "^4.17.13",
		"@types/node": "^17.0.23",
		"@types/node-fetch": "^2.6.1",
		"copyfiles": "^2.4.1",
		"nodemon": "^2.0.15",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"ts-node": "^10.7.0",
		"tsconfig-paths": "^3.14.1",
		"tscpaths": "^0.0.9",
		"typescript": "^4.6.3"
	},
	"dependencies": {
		"dotenv": "^11.0.0",
		"express": "^4.17.3",
		"firebase-admin": "^10.0.2",
		"node-fetch": "^3.2.3"
	}
}
